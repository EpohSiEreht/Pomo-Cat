{
	"manifest_version": 2,

	"name": "PomoCat",
	"description": "Pomodoro Cat Timer",
	"version": "1.0",

	"icons": {
		"128": "img/icon128.png"
	},
	"browser_action": {
		"default_icon": "img/icon38.png",
		"default_popup": "popup.html",
		"default_title": "Pomo-Cat!"
	},
	"background": {
		"scripts": ["background.js"],
		"persistent": false
	},
	"permissions": [
		"activeTab",
		"storage",
		"alarms",
		"notifications"
	]
}
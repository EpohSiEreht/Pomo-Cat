{
	"manifest_version": 2,

	"name":"Pomodoro",
	"description": "This extension allows users to set a Pomodoro timer.",
	"version": "1.0",
	"background": {
		"scripts": ["background.js"]
	},
	"browser_action": {
		"default_icon": "icon.png",
		"default_popup": "popup.html",
		"default_title": "Pomodoro Time!"
	},
	"permissions": [
		"activeTab"
	]
}